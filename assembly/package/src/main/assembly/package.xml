<assembly>
    <id>${project.version}</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!-- 打包bdp-doc目录到 打包目录build下 -->
        <fileSet>
            <directory>../bdp-doc/*</directory>
            <outputDirectory>./</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>

    </fileSets>
</assembly>